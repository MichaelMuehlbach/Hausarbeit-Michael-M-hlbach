@page
@model Tischtennis_Shop.Pages.Mitarbeiterbereich.IndexModel

@{
    ViewData["Title"] = "Einlog-Bereich";
}




<h1>Einlog-Bereich</h1>
<form method="post">
   

  
    <p >

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Bitte geben sie ihren Vornamen ein. </label>
            <input asp-for="Vorname" class="form-control" width="50" />
            <span asp-validation-for="Vorname" class="text-danger"></span>
        </div>
    </p>

   
 


 
    <p>

        <div class="form-group">
            <label>Bitte geben sie ihren Nachnamen ein. </label>
            <input asp-for="Nachname" class="form-control" height="100" width="50" />
            <span asp-validation-for="Nachname" class="text-danger"></span>
        </div>


    </p>


    <p>
        <label> Bitte geben sie ihr Passwort ein </label>

    </p>

    <p>
        <textarea asp-for="PasswortString" ></textarea>



    </p>
    <input type="submit"  value="Anmelden"  />


</form>


