@page
@model Tischtennis_Shop.Pages.KundeschonvorhandenModel
@{
    ViewData["Title"] = "Bereisds vorhandender Kunden bereich";
}

<h1>Kunden Konto Bestätigung</h1>

<form method="post">
    <p>
        <label>Bitte geben sie ihren Vornamen ein. </label>
    </p>
    <p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div  class="form-group">

            <input asp-for="Vorname" class="form-control" />
            <span asp-validation-for="Vorname" class="text-danger"></span>
        </div>
    </p>
    <p>
        <label>Bitte geben sie ihren Nachnamen ein </label>
    </p>
    <p>
        

        <div class="form-group">

            <input asp-for="Nachname" class="form-control" />
            <span asp-validation-for="Nachname" class="text-danger"></span>
        </div>
    </p>
    <p>
        <label> Bitte geben sie ihre Kunden Nummer ein </label>
    </p>
    <p>
        <textarea asp-for="ideingabe"></textarea>
    </p>
    <input type="submit" value="Rechnung generieren und Anzeigen" />
</form>
 