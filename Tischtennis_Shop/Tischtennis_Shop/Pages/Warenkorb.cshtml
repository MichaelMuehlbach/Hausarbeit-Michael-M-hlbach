@page
@model Tischtennis_Shop.Pages.WarenkorbModel
@{

    ViewData["Title"] = "Warenkorb";
}


<p>

    <h1>Warenkorb</h1>

</p>

<table>
    <thead>

        <tr>

            <th width="250">
                Name
            </th>

            <th width="100">
                Farbe

            </th>

            <th width="100">

                Menge
            </th>

            <th width="100">
                Preis je Stück

            </th>

            <th width="100">
               Gesamt Preis

            </th>


        </tr>
    </thead>


    <tbody>

        @foreach (var item in Model.Ware)
        {

        <tr>



            <td width="250">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td width="100">

                @Html.DisplayFor(modelItem => item.Farbe)
            </td>

            <td width="100">

                @Html.DisplayFor(modelItem => item.Menge)
            </td>
            <td width="50">
                @Html.DisplayFor(modelItem => item.Preis_je_Stueck)
            </td>
            <td width="50">
                @Html.DisplayFor(modelItem => item.Gesamtpreis)
            </td>

        </tr>

        }


    </tbody>





</table>
<br />
<br />
<p>
    Zwischensumme : <label>@Model.Zwischensumme</label>


</p>

<p>
        <br />
        <br />
        <a href="/Index">Zurück</a>


</p>
